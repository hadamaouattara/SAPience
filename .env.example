# SAPience Environment Configuration
# Copy this file to .env.local and fill in your values

# Application
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# n8n Configuration
N8N_API_URL=https://exonov-u39090.vm.elestio.app
N8N_API_KEY=your-n8n-api-key
N8N_WEBHOOK_SECRET=your-n8n-webhook-secret

# Claude AI (Anthropic)
CLAUDE_API_KEY=your-claude-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# SAP Configuration (managed via n8n credentials)
SAP_BASE_URL=http://202.153.35.211:50000
SAP_SERVICE_PATH=/sap/opu/odata/sap/ACM_APPLWC/
SAP_USERNAME=your-sap-username
SAP_PASSWORD=your-sap-password

# Database (for multi-tenant production)
DATABASE_URL=postgresql://user:pass@localhost:5432/sapience
DATABASE_POOL_SIZE=10
DATABASE_SSL=true

# Netlify (for blob storage and edge functions)
NETLIFY_BLOB_TOKEN=your-netlify-blob-token
NETLIFY_SITE_ID=your-netlify-site-id

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Teams/Slack Integration
TEAMS_WEBHOOK_URL=https://your-company.webhook.office.com/...
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
POSTHOG_KEY=your-posthog-key

# Feature Flags
ENABLE_ML_PREDICTIONS=false
ENABLE_ANOMALY_DETECTION=true
ENABLE_WHAT_IF_SCENARIOS=false
ENABLE_MULTI_TENANT=false

# Security
ENCRYPTION_KEY=your-32-char-encryption-key-here
JWT_SECRET=your-jwt-secret-key
CSRF_SECRET=your-csrf-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX=100        # requests per window

# File Upload
MAX_FILE_SIZE=10485760    # 10MB
ALLOWED_FILE_TYPES=csv,xlsx,json

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DESTINATION=console   # console, file, or syslog

# Development Only
DEBUG=false
VERBOSE_LOGGING=false
MOCK_SAP_DATA=false
MOCK_CLAUDE_RESPONSES=false